SHELL=/bin/bash
BASH_ENV=./container.env

# Schedule job to download quotes from Barchart every day at 8 AM UTC
00 08 * * * TZ=America/Chicago cd /bc-utils && ./run_bc_utils.sh 2>&1 | tee -a /proc/1/fd/1 >> "$BARCHART_OUTPUT_DIR/bc_utils.log"

# Schedule job to display input environment variables every 2 minutes
# */2 * * * * TZ=America/Chicago cd /bc-utils && ./show_input.sh 2>&1 | tee -a /proc/1/fd/1 >> "$BARCHART_OUTPUT_DIR/show_input.log"
